{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block navbar %}
{% endblock navbar %}

{% block body_tag %}
<body class="register-page">
{% endblock body_tag %}

{% block content %}
    <div class="register-box">
        <span class="register-box-msg">Registration</span>
        <div class="register-box-body">
            <div class="register-logo">
                <a href="{{ path('fos_user_registration_register') }}">
                    <img src="{{ asset('assets/images/logo.png') }}">
                </a>
            </div>

            <form action="{{ path("fos_user_registration_register") }}" {{ form_enctype(form) }} method="POST" role="form">
                <div class="form-group has-feedback">
                    {{ form_widget(form.firstName, {'attr': {'placeholder':'First name'}}) }}
                    <div class="">{{ form_errors(form.firstName) }}</div>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(form.lastName, {'attr': {'placeholder':'Last name'}}) }}
                    <div class="">{{ form_errors(form.lastName) }}</div>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(form.email, {'attr': {'placeholder':'Email'}}) }}
                    <div class="">{{ form_errors(form.email) }}</div>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'Password'}}) }}
                    <div class="help-block">{{ form_errors(form.plainPassword.first) }}</div>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder':'Repeat password'}}) }}
                    <div class="">{{ form_errors(form.plainPassword.second) }}</div>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    {{ form_widget(form.activatedAccessCode, {'attr': {'placeholder':'Access code (optional)'}}) }}
                    <div class="">{{ form_errors(form.activatedAccessCode) }}</div>
                    <span class="glyphicon glyphicon-asterisk form-control-feedback"></span>
                </div>
                {{ form_rest(form) }}

                <div class="row">
                    <div class="col-xs-8">
                        <a class="btn btn-info" href="{{ path('fos_user_security_login') }}">Already have an account?</a>
                    </div>
                    <div class="col-xs-4">
                        <input class="btn btn-primary btn-block btn-flat" type="submit" value="{{ 'registration.submit'|trans }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
