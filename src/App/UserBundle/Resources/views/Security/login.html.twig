{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block navbar %}
{% endblock navbar %}

{% block body_tag %}
<body class="login-page">
{% endblock body_tag %}

{% block content %}
    <div class="login-box">
        <span class="login-box-msg">Authentication</span>
        <div class="login-box-body">
            <div class="login-logo">
                <a href="{{ path('fos_user_security_login') }}">
                    <img src="{{ asset('assets/images/logo.png') }}">
                </a>
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group has-feedback">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Username"/>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Password" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                Remember me
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <input class="btn btn-primary btn-block btn-flat" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
            </form>

            <div class="clearfix">
                <a href="{{ path('fos_user_registration_register') }}" class="pull-left">Need an account?</a>
                <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Forgotten password?</a>
            </div>
        </div>
    </div>
{% endblock content %}
