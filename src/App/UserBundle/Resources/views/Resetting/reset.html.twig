{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body_tag %}
<body class="reset-password-page">
{% endblock body_tag %}

{% block content %}
    <div class="reset-password-box">
        <span class="reset-password-box-msg">Reset password</span>
        <div class="reset-password-box-body">
            <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
                <div class="form-group has-feedback">
                    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'Password'}}) }}
                    <div class="help-block">{{ form_errors(form.plainPassword.first) }}</div>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder':'Repeat password'}}) }}
                    <div class="">{{ form_errors(form.plainPassword.second) }}</div>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                {{ form_rest(form) }}

                <div class="row">
                    <div class="col-xs-6">
                    </div>
                    <div class="col-xs-6">
                        <input class="btn btn-primary btn-block btn-flat" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock content %}
