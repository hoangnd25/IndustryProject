{% extends 'base.html.twig' %}

{% block content %}
    <h1>Unexpected error happened</h1>

    <p>
        {% if exception.message %}
            {{ exception.message }}
        {% else %}
            Please report this error, and <a href="{{ path('app_web_default_index') }}">return to the homepage</a>.
        {% endif %}
    </p>
{% endblock %}