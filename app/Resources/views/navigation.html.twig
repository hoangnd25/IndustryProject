{% spaceless %}
<div class="toolkit brand-home header-short navbar-fixed-top">
    <header class="headroom headroom--pinned headroom--top">
        <div class="header-top">
            <div class="container">
                <div class="logo">
                    <div class="logo1">
                        <a href="{{ path('app_web_default_index') }}">
                            <img src="{{ asset('assets/images/logo.png') }}" alt="GS1 Australia" height="72" width="127" border="0">
                        </a>
                        <p class="large hidden-xs hidden-sm"><span style="padding-bottom: 25px; color: rgb(0, 44, 108); font-size: 25px; font-weight: bold;">Link</span></p>
                    </div>
                </div>
                <div class="secondary-nav">
                    <ul class="list-inline">
                        {% set secondaryMenu = cms_menu_get('secondary') %}
                        {% for item in secondaryMenu.items %}
                            <li>
                                <a class="{{ item.class }}" href="{{ item.url }}">{{ item.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    {% if app.user and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="dropdown">
                        <a class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ mopa_bootstrap_icon('user') }}
                            &nbsp;{{ app.user.firstName }} {{ app.user.lastName }}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            {% if is_granted('ROLE_GS1_MEMBER') %}
                                <li><a href="{{ path('member_profile_edit') }}">Edit profile</a></li>
                            {% endif %}
                            <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                        </ul>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="navigation">
            <div class="container">
                <nav class="navbar yamm navbar-default" role="navigation">
                    <div class="navbar-header">
                        <div class="logo1 visible-xs">
                            <a href="">
                                <img src="{{ asset('assets/images/logo.png') }}" alt="GS1 Australia" height="72" width="127" border="0">
                            </a>
                        </div>

                        <button id="ui-collapse-144" aria-expanded="false" aria-selected="false" role="tab" type="button" data-toggle="collapse" data-target="#navbar-collapse-example" class="navbar-toggle collapsed"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>

                        {% if app.user and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <div class="secondary-nav">
                            <div class="dropdown">
                                <a class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ mopa_bootstrap_icon('user') }}
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    {% if is_granted('ROLE_GS1_MEMBER') %}
                                        <li><a href="{{ path('member_profile_edit') }}">Edit profile</a></li>
                                    {% endif %}
                                    <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                                </ul>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    <div id="navbar-collapse-example" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            {% set mainMenu = cms_menu_get('main') %}
                            {% for item in mainMenu.items %}
                            <li>
                                <a class="{{ item.class }}" href="{{ item.url }}">{{ item.name }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
</div>
{% endspaceless %}