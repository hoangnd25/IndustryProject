{% extends 'MopaBootstrapBundle::base_initializr.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

{% block head %}
    {% spaceless %}
    {{ parent() }}
    {% endspaceless %}
{% endblock head %}

{% block head_style %}
    {% stylesheets filter='cssrewrite,less,?uglifycss' output='assets/css/main.css'
        'bundles/mopabootstrap/less/mopabootstrapbundle.less'
        'bundles/appweb/css/bootstrap-theme.css'
        'bundles/appweb/css/bootstrap-accessibility.min.css'
        'bundles/appweb/css/select2.css'
        'bundles/appweb/less/main.less'
        'bundles/appweb/css/gotham-font.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    {% stylesheets filter='cssrewrite,less,?uglifycss' output='assets/css/print.css'
    '@AppWebBundle/Resources/public/less/print.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="print" />
    {% endstylesheets %}


    {% if diagnostic_mode %}
        <link href="{{ asset('bundles/mopabootstrap/css/diagnostic.css') }}" type="text/css" rel="stylesheet" media="screen" />
    {% endif %}
{% endblock head_style %}

{% block head_script %}
    {#<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>#}
{% endblock head_script %}

{% block navbar %}
{% spaceless %}
    <div class="toolkit brand-home header-short navbar-fixed-top">
        <header class="headroom headroom--pinned headroom--top">
            <div class="header-top">
                <div class="container">
                    <div class="logo">
                        <div class="logo1">
                            <a href="">
                                <img src="{{ asset('assets/images/logo.png') }}" alt="GS1 Australia" height="72" width="127" border="0">
                            </a>
                            <p class="large hidden-xs hidden-sm"><span style="padding-bottom: 25px; color: rgb(0, 44, 108); font-size: 25px; font-weight: bold;">Link</span></p>
                        </div>
                    </div>
                    <div class="secondary-nav">
                        <ul class="list-inline">
                            <li><a href="http://www.gs1au.org/" target="_blank">GS1 Australia Home</a></li>
                            <li><a href="http://www.gs1express.com.au/barcodes/" target="_blank">Get a barcode</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="navigation">
                <div class="container">
                    <nav class="navbar yamm navbar-default" role="navigation">
                        <div class="navbar-header">
                            <div class="logo1 visible-xs">
                                <a href="">
                                    <img src="{{ asset('assets/images/logo.png') }}" alt="GS1 Australia" height="72" width="127" border="0">
                                </a>
                            </div>
                            <button id="ui-collapse-144" aria-expanded="false" aria-selected="false" role="tab" type="button" data-toggle="collapse" data-target="#navbar-collapse-example" class="navbar-toggle collapsed"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>

                        </div>
                        <div id="navbar-collapse-example" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                {% set mainMenu = cms_menu_get('main') %}
                                {% for item in mainMenu.items %}
                                    <li>
                                        <a class="{{ item.class }}" href="{{ item.url }}">{{ item.name }}</a>
                                    </li>
                                {% endfor %}
                                <li>
                                    <a class="" href="{{ url('fos_user_security_logout') }}">Logout</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
    </div>
{% endspaceless %}
{% endblock navbar %}

{% block container %}
{% spaceless %}
    <div class="{% block container_class %}container{% endblock container_class %} toolkit">
    {% block header %}
    {% endblock header %}
        <div class="content">
            {% block flashes %}
                {% if app.session.flashbag.peekAll|length > 0 %}
                    <div class="row">
                        <div class="col-sm-12">
                            {{ session_flash() }}
                        </div>
                    </div>
                {% endif %}
            {% endblock flashes %}

            {% block content %}
            {% endblock content %}
        </div>
    </div>

    {% block footer %}
        {% include '::footer.html.twig' %}
    {% endblock footer %}
{% endspaceless %}
{% endblock container %}

{% block foot_script_assetic %}
    {% javascripts output='assets/js/main.js' filter='?uglifyjs2'
        '@MopaBootstrapBundle/Resources/public/bootstrap/dist/js/bootstrap.js'
        '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-collection.js'
        '@AppWebBundle/Resources/public/js/select2.js'
        '@AppWebBundle/Resources/public/js/main.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock foot_script_assetic %}

{% block foot_script %}
    {{ parent() }}
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <script type="text/javascript">
        WebFontConfig = {
            google: { families: [ 'Source+Code+Pro:500:latin' ] }
        };
        (function() {
            var wf = document.createElement('script');
            wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
                    '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
            wf.type = 'text/javascript';
            wf.async = 'true';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(wf, s);
        })();
    </script>
{% endblock %}